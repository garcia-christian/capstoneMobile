<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp">

    <TableLayout
        android:layout_width="170dp"
        android:layout_height="260dp"
        android:background="@drawable/reqtangle_rounded2"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">
        <TableRow>

            <TextView
                android:id="@+id/essentials_label2"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="10dp"
                android:text="Rubbing Alcohol"
                android:textColor="@color/black"
                android:textSize="18dp" />

        </TableRow>
        <TableRow>

            <ImageView
                android:id="@+id/allprod_image"
                android:layout_width="match_parent"
                android:layout_height="134dp"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="10dp"
                android:src="@drawable/es_2" />
        </TableRow>
        <TableRow>

            <TextView
                android:id="@+id/generic_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:maxLines="3"
                android:lines="3"
                android:paddingTop="5dp"
                android:text="sdsdsdsdasdadassdsdsdsdsdsddas asdasdsa asd sdasdasd a"
                android:textColor="@color/black_default"
                android:textSize="14dp" />

        </TableRow>
        <TableRow>

            <TextView
                android:id="@+id/essentials_price2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="5dp"
                android:text="45 php"
                android:textColor="@color/price_red"
                android:textSize="18dp" />

        </TableRow>


    </TableLayout>

</LinearLayout>