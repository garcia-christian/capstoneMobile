<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="1dp">

    <TableLayout
        android:layout_width="172dp"
        android:layout_height="207dp"
        android:background="@drawable/border_r_20"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">
        <TableRow>
            <TextView
                android:id="@+id/essentials_label_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="10dp"
                android:layout_marginTop="10dp"
                android:text="DOLFENAL"
                android:textColor="@color/black"
                android:textSize="18dp" />

        </TableRow>
        <TableRow>
            <ImageView
                android:id="@+id/essentials_pic_product"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:gravity="center"

                android:src="@drawable/med_2"/>
        </TableRow>
        <TableRow

            android:background="@drawable/border_r_20_bottom"
            android:backgroundTint="@color/main">
            <TextView
                android:id="@+id/essentials_price_product"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="5dp"
                android:backgroundTint="@color/main"
                android:layout_marginBottom="5dp"
                android:text="VIEW"
                android:textColor="@color/white"
                android:textSize="14dp" />

        </TableRow>


    </TableLayout>

</LinearLayout>